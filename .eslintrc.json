{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "next/core-web-vitals"
  ],
  "plugins": ["cypress", "@typescript-eslint"],
  "env": {
    "cypress/globals": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.eslint.json"] // Specify it only for TypeScript files
    // or `project: true` in typescript-eslint version >= 5.52.0
  },

  "rules": {
    "@typescript-eslint/no-floating-promises": "error",
    "@typescript-eslint/array-type": "error",
    "@typescript-eslint/await-thenable": "error",
    "require-await": "error",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["@features/*/*"],
            "message": "Please import from the root @features folder (e.g. @features/ui instead of @features/ui/button)."
          }
        ]
      }
    ]
  }
}
